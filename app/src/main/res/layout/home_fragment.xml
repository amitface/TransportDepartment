<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="layout.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_home_activity"
        android:layout_marginBottom="50dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Apply for Learning Licence"
                android:textColor="@android:color/background_light"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:layout_weight=".90"
                android:layout_gravity="bottom" android:background="@color/colorPrimaryTransportDepartment"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:src="@drawable/navgation_link"
                android:background="#AC5400"
                android:layout_weight=".10"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Check Status of Learning License Application"
                android:textColor="@android:color/background_light"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:layout_weight=".90"
                android:layout_gravity="bottom" android:background="@color/colorPrimaryTransportDepartment"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:src="@drawable/navgation_link"
                android:background="#AC5400"
                android:layout_weight=".10"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Read Instructions"
                android:textColor="@android:color/background_light"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:layout_weight=".90"
                android:layout_gravity="bottom" android:background="@color/colorPrimaryTransportDepartment"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/navgation_link"
                android:background="#AC5400"
                android:layout_weight=".10"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Download Application form for Learning license"
                android:textColor="@android:color/background_light"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:layout_weight=".90"
                android:layout_gravity="bottom" android:background="@color/colorPrimaryTransportDepartment"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/navgation_link"
                android:background="#AC5400"
                android:layout_weight=".10"/>
        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:src="@drawable/checkbox_home_activity"
                android:layout_weight=".10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Please take the appointment for  District RTO where he/she resides."
                android:textColor="@android:color/black"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:layout_weight=".90"
                android:layout_gravity="bottom"
                android:gravity="center_vertical" />

        </TableRow>
        <TableRow
            android:layout_margin="2dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:src="@drawable/checkbox_home_activity"
                android:layout_weight=".10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Please choose an appointment slot as per your preference"
                android:textColor="@android:color/black"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:layout_weight=".90"
                android:layout_gravity="bottom"
                android:gravity="center_vertical" />

        </TableRow>
        <TableRow
            android:layout_margin="2dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:src="@drawable/checkbox_home_activity"
                android:layout_weight=".10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="After fee Payment download application form"
                android:textColor="@android:color/black"
                android:id="@+id/textView1"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:layout_weight=".90"
                android:layout_gravity="bottom"
                android:gravity="center_vertical" />

        </TableRow>
    </TableLayout>

</LinearLayout>
