<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1"
    tools:context="com.converge.transportdepartment.SelectSchedule">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearSchedule"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="24dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/leftarrow"/>
               <com.astuetz.PagerSlidingTabStrip
                   android:layout_gravity="center_vertical"
                   android:id="@+id/tabs"
                   android:layout_width="0dp"
                   android:layout_weight=".8"
                   android:layout_height="48dip" />


               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight=".1"
                   android:layout_height="24dip"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/rightarrow"/>
           </LinearLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/colors"
                android:layout_below="@+id/tabs"
                tools:context=".Home" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearSchedule"
        android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/buttonBackSelectSchedule"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimaryTransportDepartment"
                android:src="@drawable/back"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:textColor="@android:color/background_light"
            />

            <ImageView
                android:id="@+id/buttonNextSelectSchedule"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimaryTransportDepartment"
                android:src="@drawable/next"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textColor="@android:color/background_light"
            />
    </LinearLayout>


</RelativeLayout>


