<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"

    android:background="@drawable/golsy"
    tools:context="com.converge.transportdepartment.PaymentSuccessfull">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount Paid :Rs. 340 "
                android:gravity="center"
                android:visibility="gone"
                android:textSize="24dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src= "@drawable/payment_successful"
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Payment Successful for amount Rs. 340"
                    android:textSize="18dp"
                    android:layout_margin="2dp"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Thank You for Using M-Parivahan"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="for your Learning License Application"
                android:textSize="14sp"
                android:textStyle="italic"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="40dp"
               android:textAlignment="center"
               android:text="To save your application details "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Download Your Receipt and"
                android:layout_marginTop="20dp"
                android:id="@+id/textView10"
                android:textSize="18dp"

                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Application Form"
                android:textSize="18dp"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_weight=".2"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TableRow>
                    <EditText
                        android:id="@+id/emailToSend"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="2dp"
                        android:padding="5dp"
                        android:background="@drawable/edit_text_personal_details"
                        android:hint="Enter email to receive pdf"
                        android:layout_span="5"
                        />
                    <ImageView
                        android:id="@+id/buttonEmail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/send"
                        android:layout_span="2"
                        android:layout_margin="2dp"
                      />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_span="5"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:text="Application Form :"
                        android:padding="5dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/buttonDownload"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_span="2"
                        android:src="@drawable/save"
                        android:layout_margin="2dp"/>


                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_span="5"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:text="Receipt :"
                        android:textStyle="bold"
                        android:padding="5dp" />


                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"

                        android:layout_span="2"
                        android:src="@drawable/save"
                        android:layout_margin="2dp"
                        android:text="Save"
                        android:id="@+id/saveReceipt" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

