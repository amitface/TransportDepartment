<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.converge.transportdepartment.PersonalDetails">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".9">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:padding="6dip">

            <TableRow>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_gravity="start"
                android:layout_margin="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Select RTO"/>
            </TableRow>
            <TableRow>
                <Spinner
                    android:id="@+id/spinnerRTO"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:entries="@array/RTO"
                    android:background="@drawable/gradient_spinner"
                    android:spinnerMode="dialog"
                    android:layout_span="3" />
            </TableRow>
            <TableRow
                android:layout_marginTop="6dp">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_margin="2dp"

                    android:text="Applicant First Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_margin="2dp"

                    android:text="Midddle Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="start"

                    android:text="Last Name"/>

            </TableRow>
            <TableRow>
                <EditText
                    android:id="@+id/editTextViewApplicantFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"/>
                <EditText
                    android:id="@+id/editTextViewApplicantMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"/>
                <EditText
                    android:id="@+id/editTextViewApplicantLastName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"/>
            </TableRow>

            <!--RTO Relationship Type Fathers Name-->
            <TableRow
            android:layout_marginTop="8dp">

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:layout_margin="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Relationship Type"/>


            </TableRow>
            <TableRow>

                <Spinner
                    android:id="@+id/spinnerRelationshipType"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:entries="@array/RelationType"
                    android:paddingLeft="4dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/gradient_spinner"
                    android:spinnerMode="dialog" />

            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:layout_gravity="start"
                    android:layout_margin="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Relation's Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:layout_gravity="start"
                    android:layout_margin="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text=" Middle Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:layout_gravity="start"
                    android:layout_margin="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Last Name"/>
            </TableRow>
            <TableRow>
                <EditText
                    android:id="@+id/editTextRelationsName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"
                    android:layout_span="1" />
                <EditText
                    android:id="@+id/editTextRelationsMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"
                    android:layout_span="1" />
                <EditText
                    android:id="@+id/editTextRelationsLastName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"
                    android:layout_span="1" />
            </TableRow>
            <!--Permanant Address-->
            <TableRow
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:layout_gravity="start"
                android:text="Permanent Address"/>

            </TableRow>
            <TableRow
            >

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_personal_details"
                android:layout_span="3" />
            </TableRow>


            <LinearLayout
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkboxSameAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:text="Present address same as Premanant"/>
            </LinearLayout>
            <!--Present  Address-->
            <TableRow
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:layout_gravity="start"
                    android:text="Present Address"/>

            </TableRow>
            <TableRow>

                <EditText
                    android:id="@+id/editTextPresentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/edit_text_personal_details"
                    android:layout_span="3" />
            </TableRow>
            <!--Duration of stay PinCode mobile-->
            <TableRow
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_margin="2dp"
                    android:text="Duration of Stay"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_margin="2dp"

                    android:text="Pin Code"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_margin="2dp"
                    android:layout_span="1"
                    android:text="Moblie No"/>


            </TableRow>
            <TableRow
                >
                <EditText
                    android:id="@+id/editTextStay"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:layout_span="1"
                    android:maxLength="6"
                    android:inputType="number"
                    android:background="@drawable/edit_text_personal_details"/>
                <EditText
                    android:id="@+id/editTextPinCode"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:layout_span="1"
                    android:maxLength="6"
                    android:inputType="phone"
                    android:background="@drawable/edit_text_personal_details"/>
                <EditText
                    android:id="@+id/editTextMoblieNo"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:layout_span="1"
                    android:background="@drawable/edit_text_personal_details"
                    android:maxLength="10"
                    android:inputType="phone" />

            </TableRow>
            <!--Citizenship status-->
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_margin="2dp"
                    android:layout_gravity="start"
                    android:layout_span="3"
                    android:text="Citizenship status by"/>
            </TableRow>
            <TableRow>
                <Spinner
                    android:id="@+id/spinnerCitizenship"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:entries="@array/Citizenship"
                    android:layout_marginRight="2dp"
                    android:layout_span="3"
                    android:background="@drawable/gradient_spinner"
                    android:spinnerMode="dropdown" />

            </TableRow>


            <!--EmailId-->
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="start"
                    android:layout_span="3"
                    android:text="Email"/>
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:layout_span="3"
                    android:background="@drawable/edit_text_personal_details"
                    android:inputType="textEmailAddress" />
            </TableRow>

            <!--Qualification-->
            <TableRow
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_gravity="start"
                android:layout_span="3"

                android:text="Qualification"/>



            </TableRow>
            <TableRow>
                <Spinner
                    android:id="@+id/spinnerQualification"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:entries="@array/Qualification"
                    android:layout_marginRight="2dp"
                    android:layout_span="3"
                    android:background="@drawable/gradient_spinner"
                    android:spinnerMode="dialog" />
            </TableRow>

            <!--DOB Gender-->
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_span="2"
                    android:text="Date of Birth"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:layout_gravity="start"
                    android:layout_margin="2dp"
                    android:layout_span="1"
                    android:text="Gender"/>

            </TableRow>
            <TableRow>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_span="2">
                    <ImageView
                        android:id="@+id/imageViewDatePicker"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/calender"
                        android:layout_gravity="start"
                        android:onClick="onClickPersonalDetails"
                        />
                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:paddingTop="10dp"
                        android:textAlignment="center"

                        android:background="@drawable/edit_text_personal_details"
                        />
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:entries="@array/Gender"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/gradient_spinner"
                    android:spinnerMode="dialog" />

            </TableRow>
        <!--Id mark -->
        <TableRow
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_gravity="start"
                android:layout_span="3"

                android:text="Id Mark"/>
        </TableRow>
        <TableRow
            android:layout_gravity="center">
            <Spinner
                android:id="@+id/spinnerIdmark"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_span="3"
                android:entries="@array/idMark"
                android:background="@drawable/gradient_spinner"
                android:spinnerMode="dialog" />
        </TableRow>

            <!-- BloodGroup Rh-->
            <TableRow
                android:layout_marginTop="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"

                    android:layout_span="1"
                    android:text="Blood Group"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="start"
                    android:layout_span="1"
                    android:text="RH"/>
            </TableRow>
            <TableRow >
                <Spinner
                    android:id="@+id/spinnerBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:entries="@array/Blood"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/gradient_spinner"
                    android:spinnerMode="dialog" />
                <Spinner
                    android:id="@+id/spinnerRH"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:entries="@array/Rh"
                    android:background="@drawable/gradient_spinner"
                    android:layout_marginRight="2dp"
                    />

            </TableRow>

            <!--PhotoId -->
            <TableRow
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="start"
                    android:layout_span="2"
                    android:text="Id Proof"/>
            </TableRow>
            <TableRow>
                <Spinner
                    android:id="@+id/spinnerIdcard"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/gradient_spinner"
                    android:layout_span="3"
                    android:entries="@array/IdProof"/>
             </TableRow>
            <!--Photo Id Detail-->
            <TableRow
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"
                        android:text="Document Number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"

                        android:text="Issuing Authority"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_gravity="start"
                        android:layout_margin="2dp"

                        android:text="Date of Issue"/>

            </TableRow>
            <TableRow  >
                    <EditText
                        android:id="@+id/editTextDocumentNum"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_text_personal_details"
                       />
                    <EditText
                        android:id="@+id/editTextIssuingAuthority"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_text_personal_details"
                        android:layout_span="1"

                       />
                    <EditText
                        android:id="@+id/editTextDateofIssue"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:textSize="12dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/edit_text_personal_details"
                        />

                </TableRow>

        </TableLayout>

    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_weight=".1">

        <TableRow>

            <Button
                android:id="@+id/buttonBackPersonalDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryTransportDepartment"
                android:text="Back"
                android:layout_margin="2dp"
                android:textColor="@android:color/background_light"
               />
            <Button
                android:id="@+id/buttonClearPersonalDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryTransportDepartment"
                android:text="Clear"
                android:layout_margin="2dp"
                android:textColor="@android:color/background_light"
               />
            <Button
                android:id="@+id/buttonNextPersonalDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryTransportDepartment"
                android:text="Apply"
                android:layout_margin="2dp"
                android:textColor="@android:color/background_light"
               />
        </TableRow>
    </TableLayout>
</LinearLayout>

