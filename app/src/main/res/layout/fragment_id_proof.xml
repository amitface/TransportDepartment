                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:src="@drawable/image_remove"
                android:layout_margin="2dp"
                android:padding="10dp" />

        </TableRow>
    </TableLayout>

